// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int               @id @default(autoincrement())
  username        String            @db.VarChar(150) @unique
  password        String            @db.VarChar(72)
  email           String?
  phone           String
  order           Order[]
  ServiceProvider ServiceProvider[]
  Ststem          Ststem[]
}

model Order {
  id                  Int               @id @default(autoincrement())
  Productlist         String
  Orderdetails        String
  Shippinginformation String
  user                User              @relation(fields: [userId], references: [id])
  userId              Int
  payment             Payment           @relation(fields: [paymentId], references: [id])
  paymentId           Int
  ServiceProvider     ServiceProvider[]
  Ststem              Ststem[]
}

model ServiceProvider {
  id                 Int     @id @default(autoincrement())
  Contactinformation Int     @map("Contact_infomation")
  payment            Payment @relation(fields: [paymentId], references: [id])
  paymentId          Int
  user               User    @relation(fields: [userId], references: [id])
  userId             Int
  order              Order   @relation(fields: [orderId], references: [id])
  orderId            Int
}

model Ststem {
  id                      Int     @id @default(autoincrement())
  Contactinformation      Int     @map("Contact_information")
  SysteminformationString String
  Shippinginformation     Int?    @map("Shipping_information")
  order                   Order   @relation(fields: [orderId], references: [id])
  orderId                 Int
  user                    User    @relation(fields: [userId], references: [id])
  userId                  Int
  payment                 Payment @relation(fields: [paymentId], references: [id])
  paymentId               Int
}

model Payment {
  id              Int               @id @default(autoincrement())
  Paymentcode     Int               @map("Payment_code")
  Paymentmethod   String
  Amountofmoney   Int               @map("Amount_of_money")
  order           Order[]
  ServiceProvider ServiceProvider[]
  Ststem          Ststem[]
}
